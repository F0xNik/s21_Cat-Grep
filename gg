#define _GNU_SOURCE
#include<stdio.h>
#include<string.h>
#include <stdlib.h>
#include<regex.h>

struct flags {
    int flag_e;
    int flag_i;
    int flag_v;
    int flag_c;
    int flag_l;
    int flag_n;
    int flag_h;
    int flag_s;
    int flag_f;
    int flag_o;
};

regex_t re;
regmatch_t pmatch[2];

//void find_patern_if_e(char fl_str[],char pattern[]);
void parser(int argc, char* argv[],struct flags* flag);
void Unpacker(char* Buffer, char* Buffer_file, struct flags* flag);
void func_flag(char *arrFlags, struct flags *flag);
void File_out(char* Buffer, char *File_name, struct flags* flag, int sum_file);
void flag_f_out (char* Buffer, char* File_name, struct flags* flag);
void Func_flag_io(char* line_file, char* Buffer);

int main(int argc, char* argv[]){
    struct flags flag;
    flag.flag_e = 0;
    flag.flag_i = 0;
    flag.flag_v = 0;
    flag.flag_c = 0;
    flag.flag_l = 0;
    flag.flag_n = 0;
    flag.flag_h = 0;
    flag.flag_s = 0;
    flag.flag_f = 0;
    flag.flag_o = 0;
    //char pattern[100];
    if(argc > 2)
        parser(argc, argv, &flag);
    return 0;
}

void parser(int argc, char* argv[], struct flags* flag){
    char* Buffer = (char*)calloc(1,sizeof(char));
    char* Buffer_file = (char*)calloc(1,sizeof(char));
    char* Buffer_flag = (char*)calloc(1,sizeof(char));
    char* patern = (char*)calloc(1,sizeof(char));
    int k=0;
    int i = 0;
    int count_flag = 0;
    int count_patern = 0;
    int count_for_stick = 0;
    int switch_buf = 0;
        for(i = 1; i<argc;i++){
        if (argv[2][0]!='-'){
            switch_buf = 1;
        }
        if (argv[i][0]=='-'){
            switch_buf = 0;
            for (k=0;argv[i][k]!='\0'&&argv[i][k]!='\0';k++){
                count_flag++;
                Buffer_flag = (char*) realloc(Buffer_flag,count_flag*sizeof(char));
                Buffer_flag[count_flag-1] = argv[i][k];
                if (argv[i][k]=='e'){
                    break;
                }
            }
            func_flag(Buffer_flag,flag);
            if(argv[i][k+1]!='\0' && argv[i][k]=='e'){
                switch_buf = 1;
                for(int j = k+1; argv[i][j]!='\0'&&argv[i][j]!=' ';j++){
                    count_patern++;
                    patern = (char*)realloc(patern,count_patern*sizeof(char));
                    patern[count_patern-1]=argv[i][j];
                }
                count_patern++;
            }
            else if (argv[i][k]=='e' && argv[i][k+1]=='\0'){
                if (argv[i+1][0]!='-'){
                i++;
                switch_buf = 1;
                if(count_for_stick>0){
                    Buffer = (char*)realloc(Buffer, (strlen(Buffer)+1)*sizeof(char));
                    strcat(Buffer,"|");
                }
                Buffer = (char*)realloc(Buffer, (strlen(Buffer)+strlen(argv[i]))*sizeof(char));
                strcat(Buffer,argv[i]);
                count_for_stick++;
                }
            }
        }
        else {
            if (switch_buf==0){
                switch_buf = 1;
            if(count_for_stick>0){
                    Buffer = (char*)realloc(Buffer, (strlen(Buffer)+1)*sizeof(char));
                    strcat(Buffer,"|");
                }
                Buffer = (char*)realloc(Buffer,(strlen(Buffer)+strlen(argv[i]))*sizeof(char));
                strcat(Buffer,argv[i]);
                count_for_stick++;
            }
            else{
                Buffer_file = (char*)realloc(Buffer_file,(strlen(Buffer_file)+strlen(argv[i])+1)*sizeof(char));
                strcat(Buffer_file,argv[i]);
                strcat(Buffer_file," ");
            }
        }
        if (count_patern > 0){
            if(count_for_stick>0){
                Buffer = (char*)realloc(Buffer, (strlen(Buffer)+1)*sizeof(char));
                strcat(Buffer,"|");
            }
            Buffer = (char*)realloc(Buffer, (strlen(Buffer)+strlen(argv[i]))*sizeof(char));
            strcat(Buffer,patern);
        count_patern = 0;
        count_for_stick++;
        memset(patern, '\0', sizeof(char));
    }
    }
    //printf("paterni %s \nfiles %s\n",Buffer,Buffer_file);
    Unpacker(Buffer,Buffer_file,flag);
    free(Buffer);
    free(Buffer_file);
    free(Buffer_flag);
    free(patern);
    regfree(&re);
}

void Unpacker(char Buffer[], char Buffer_file[], struct flags* flag){
    char* file = (char*)calloc(1,sizeof(char));
    int count_buf = 0, count_file = 0;
    int sum_file = 0;
    while (Buffer_file[count_buf]!='\0'){
       if(Buffer_file[count_buf]==' ')
            sum_file++;
        count_buf++;
    }
    count_buf = 0;
    if (flag->flag_f==1){
        flag_f_out(Buffer, Buffer_file, flag);
    }
    else{
        while (Buffer_file[count_buf]!='\0'){
            free(file);
            file = (char*)calloc(1,sizeof(char));
            while (Buffer_file[count_buf]!=' '&&Buffer_file[count_buf]!='\0'){
                count_file++;
                file = (char*) realloc(file,  count_file*sizeof(char));
                file[count_file-1] = Buffer_file[count_buf];
                count_buf++;
            }
            File_out(Buffer,file,flag,sum_file);
            if(Buffer_file[count_buf]!='\0')
                count_buf++;
            memset(file,0,strlen(file));
            
            count_file = 0;
        }
    }
    free(file);
}

void flag_f_out (char Buffer[], char File_name[], struct flags* flag){

}

void Func_flag_io(char* line_file, char* Buffer){
    char* count_o_flag = strcasestr(line_file, Buffer);
    int count_o_flag2 = 0;
    while(count_o_flag2<strlen(Buffer)){
        printf("%c",*count_o_flag);
        count_o_flag++;
        count_o_flag2++;
    }
}

void File_out(char Buffer[], char File_name[], struct flags* flag, int sum_file){
    //printf("pattern - %s\npath - %s\n\n\n", Buffer, File_name);
    FILE *file;
    char line_file[100]="";
    int res;
    int cflags = REG_EXTENDED + REG_NEWLINE;
    int SUM_flag_c = 0;
    int Number_line = 0;
    int check_flag_l=0;
    if (flag->flag_i==1)
        cflags=+ REG_ICASE;
    file = fopen(File_name,"r");
    if(file != NULL) {
        regcomp(&re, Buffer, cflags);
        while(!feof(file)) {
            fgets(line_file, 250, file);
            Number_line++;
            res = regexec(&re, line_file, 250, pmatch, 0);
                if((res == 0 && flag->flag_v == 0) || (res != 0 && flag->flag_v == 1)){
                    SUM_flag_c++;
                    check_flag_l = 1;
                    if (flag->flag_l == 0 && flag->flag_c==0){
                        if (sum_file<2||flag->flag_h==1){
                            if (flag->flag_n==1){
                                printf("%d:",Number_line);
                            }
                            if (flag->flag_o==1&&flag->flag_i==1){
                                Func_flag_io(line_file,Buffer);
                                printf("\n");
                            }
                            else if (flag->flag_o==1 && flag->flag_i!=1){
                                printf("%s\n",Buffer);
                            }
                            else {
                                printf("%s", line_file);
                            }
                        }
                        else{
                            if (flag->flag_n==1){
                                printf("%s:%d:",File_name,Number_line);
                                if (flag->flag_o==1&&flag->flag_i==1){
                                    Func_flag_io(line_file,Buffer);
                                    printf("\n",Buffer);
                                }
                                else if (flag->flag_o==1&&flag->flag_i==0){
                                    printf("%s\n",Buffer);
                                }
                                else {
                                    printf("%s",line_file);
                                }
                            }
                            else {
                                printf("%s:%s",File_name,line_file);
                            }
                        }
                    }
                    if (feof(file)&&line_file[strlen(line_file)]!='\n'&&flag->flag_c!=1&&flag->flag_l!=1)
                        printf("\n");
                }
        }
        if (flag->flag_c==1&&flag->flag_l==0)
            printf("%s:%d\n", File_name, SUM_flag_c);
        if (flag->flag_l==1&&check_flag_l==1 && flag->flag_c==0)
            printf("%s\n",File_name);
        if (flag->flag_l==1&&check_flag_l==1 && flag->flag_c==1){
            printf("%s:1\n%s\n",File_name,File_name);
        }
    }
    else {
        if (flag->flag_s==0)
            printf("grep: %s: No such file or directory\n",File_name);
    }
}

void func_flag(char *arrFlags, struct flags* flag) {
    int checker = 0;
    for (int i = 0; i< strlen(arrFlags); i++){
        if (arrFlags[i]=='e'){
            break;
        }
        else {
            switch (arrFlags[i]){
                case 'i':
                    flag->flag_i = 1;
                    break;
                case 'v':
                    flag->flag_v = 1;
                    break;
                case 'c':
                    flag->flag_c = 1;
                    break;
                case 'l':
                    flag->flag_l = 1;
                    break;
                case 'n':
                    flag->flag_n = 1;
                    break;
                case 'h':
                    flag->flag_h = 1;
                    break;
                case 's':
                    flag->flag_s = 1;
                    break;
                case 'f':
                    flag->flag_f = 1;
                    break;
                case 'o':
                    flag->flag_o = 1;
                    break;
            }
        }
    }
}
